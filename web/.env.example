# GitHub Personal Access Token (requires repo scope)
GH_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Webhook secret (must match the secret configured in GitHub webhook settings)
WEBHOOK_SECRET=your-webhook-secret-here

# Bot username — the GitHub username that triggers the agent (default: grog)
BOT_USERNAME=grog-ai

# Server port (default: 3000)
PORT=3000

# MongoDB connection URI (default: mongodb://localhost:27017/grog)
MONGODB_URI=mongodb://localhost:27017/grog

# Token budget limits (0 = unlimited)
DAILY_TOKEN_BUDGET=5000000
HOURLY_TOKEN_BUDGET=1000000

# GitHub OAuth (for self-service repo setup via the dashboard)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Session secret for signing auth cookies
SESSION_SECRET=change-me-to-something-random

# Public base URL of this Grog instance (used for OAuth callback and webhook URLs)
BASE_URL=https://your-grog-server.example.com

# Comma-separated GitHub user IDs that can access admin endpoints (empty = all authenticated users)
ADMIN_GITHUB_IDS=

# Stripe billing — leave empty to disable billing (self-host mode = unlimited)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
