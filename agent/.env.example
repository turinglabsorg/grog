# GitHub Personal Access Token (requires repo scope)
GH_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Webhook secret (must match the secret configured in GitHub webhook settings)
WEBHOOK_SECRET=your-webhook-secret-here

# Bot username â€” the GitHub username that triggers the agent (default: grog)
BOT_USERNAME=grog-ai

# Server port (default: 3000)
PORT=3000

# Maximum concurrent agent jobs (default: 2)
MAX_CONCURRENT_JOBS=2

# Working directory for cloned repos (default: /tmp/grog-jobs)
WORK_DIR=/tmp/grog-jobs

# MongoDB connection URI (default: mongodb://localhost:27017/grog)
MONGODB_URI=mongodb://localhost:27017/grog

# Agent timeout in minutes (default: 30)
AGENT_TIMEOUT_MINUTES=30

# Max retries for transient failures (default: 2)
MAX_RETRIES=2

# Logging: set to "json" for structured JSON output (default: human-readable)
# LOG_FORMAT=json

# Log level: debug | info | warn | error (default: info)
# LOG_LEVEL=info

# Token budget limits (0 = unlimited)
# Total tokens (input + output) per time window before queue pauses
# DAILY_TOKEN_BUDGET=5000000
# HOURLY_TOKEN_BUDGET=1000000
